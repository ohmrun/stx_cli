{
  "build" : {
    "-D"    : ["no-deprecation-warnings"],
    "-cp"   : ["src/main/haxe"],
    "-lib"  : [
      "tink_priority","tink_core",
      "haxe-files",  
      "stx_pico","stx_nano","stx_fn","stx_ds","stx_assert","stx_parse","stx_asys","stx_fp","stx_log"
    ],
    "unit"  : {
      "--macro" : [
        "include('stx.sys.cli',true)",
        "include('stx.sys.Cli',true)"
      ],
      "interp" : {
        "--interp"  : true
      }
    },
    "main" : {
      "-main"     : "Main",
      "interp"  : {
        "--interp"  : true
      }
    },
    "test" : {
      "-cp"         : "src/test/haxe",
      "-lib"        : "stx_test",
      "-resource"   : ["tests.pml@tests"],
      "-D"          : ["stx.parse.switches.debug=false","debug"],
      "-main"       : "stx.sys.cli.Test",
      "interp" : {
        "--interp" : true
      }
    },
    "run" : {
      "--run" : ["stx.sys.Cli"]
    }
  },
  "run" : {

  }
}